extends ../layouts/common

block content
  h1 Create Users

  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="create", method="POST").form-group
    .mb-3
      label(for="name") Name
      input.form-control#name(name="name", type="text", value=values ? values.name : "")

    .mb-3
      label(for="phone") Phone
      input.form-control#phone(name="phone", type="text", value=values ? values.phone : "")

    button.btn.btn-primary Create 