extends ../layouts/common

block content
  h1
    span.mr-3 Users
    a.btn.btn-primary.ml-5(href='/users/create') New

  .d-flex
      form(action="/users/search", method="GET", class="d-flex").ml-auto
        input(type="text", name="q", value=text, class="form-control ")
        button(class="btn btn-primary ml-2") Search


  table.table
    tr
      th Name
      th Phone
      th Actions
    each user in users
      tr
        td= user.name
        td= user.phone
        td
          a.btn.btn-outline-primary(href='/users/' + user.id) View 