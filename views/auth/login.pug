extends ../layouts/common

block content
  h1 Login

  if errors
    each error in errors
      .alert.alert-danger= error

  form(method="POST").form-group
    .mb-3
      label(for="email") Email
      input.form-control#email(name="email", type="text", value=values ? values.email : "")

    .mb-3
      label(for="password") Password
      input.form-control#password(name="password", type="password", value=values ? values.password : "")

    button.btn.btn-primary Login 