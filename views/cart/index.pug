extends ../layouts/common

block content
    h1
      span.mr-3 Cart

    .row
      each product in products
        .col-sm-12
          .card
            .card-body
              h5.card-title= product.name
              p.card-text= product.description
              p.card-title $ #{product.price}
              a.btn.btn-secondary(href='#') Remove